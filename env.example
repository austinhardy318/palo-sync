# Production Panorama Configuration
PROD_PANORAMA_HOST=prod-panorama.example.com
PROD_PANORAMA_USERNAME=admin
PROD_PANORAMA_PASSWORD=changeme
# PROD_PANORAMA_API_KEY=your_api_key_here

# Lab Panorama Configuration
LAB_PANORAMA_HOST=lab-panorama.example.com
LAB_PANORAMA_USERNAME=admin
LAB_PANORAMA_PASSWORD=changeme
LAB_PANORAMA_HOSTNAME=lab-panorama-01
# LAB_PANORAMA_API_KEY=your_api_key_here

# Note: FLASK_ENV and FLASK_APP are hardcoded in docker-compose.yml
# Authentication method is automatically determined by presence of API keys

# Flask Configuration
FLASK_ENV=production
FLASK_APP=app.main:app
# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here

# Web GUI Authentication (optional)
# Leave empty to disable authentication, or set credentials
GUI_USERNAME=admin
GUI_PASSWORD=changeme

# RADIUS Authentication (optional)
# Set RADIUS_ENABLED=true to enable RADIUS authentication
RADIUS_ENABLED=false
RADIUS_SERVER=radius.example.com
RADIUS_PORT=1812
RADIUS_SECRET=your_radius_secret
RADIUS_TIMEOUT=5

# SSL Configuration
# Verify SSL certificates (true/false, default: false for lab environments)
SSL_VERIFY=false
# Optional: Path to custom CA certificate file
# SSL_CERT_PATH=/path/to/ca-cert.pem

# Timezone Configuration (optional, defaults to UTC)
# TZ=America/New_York
# TZ=Europe/London
# TZ=UTC

# Storage Configuration (optional - uses defaults if not specified)
# BACKUP_DIR=/backups
# LOG_DIR=/app/logs
